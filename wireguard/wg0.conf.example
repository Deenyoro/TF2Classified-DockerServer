# WireGuard config for the HOME SERVER (game server side)
#
# Copy to wg0.conf and fill in your keys + remote firewall IP.
#
# Generate keys:
#   wg genkey | tee privatekey | wg pubkey > publickey

[Interface]
PrivateKey = <your-private-key>
Address = 10.0.0.2/24
DNS = 1.1.1.1

[Peer]
PublicKey = <remote-firewall-public-key>
Endpoint = <remote-firewall-ip>:51820
# Route ALL traffic through the tunnel (full tunnel)
AllowedIPs = 0.0.0.0/0
# Keep tunnel alive through home NAT (no port forwarding needed)
PersistentKeepalive = 25
